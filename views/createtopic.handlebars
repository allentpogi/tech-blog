<div class="col-md-9">
  <h3>Create a new topic:</h3>

  <form class="form new-topic-form">
    <div class="form-group">
      <label for="topic-name">Topic title:</label>
      <input class="form-input" type="text" id="topic-name" name="topic-name" />
    </div>
    <div class="form-group">
      <label for="topic-desc">Topic description:</label>
      <textarea class="form-input" id="topic-desc" name="topic-desc"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary cancel-create">Cancel</button>
      <button type="submit" class="btn btn-primary create-topic">Create</button>
    </div>
    <br>
  </form>
</div>

<script src="../../js/createtopic.js"></script>
