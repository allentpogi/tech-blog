<div class = "topic-details">
    <div class="row mb-4">
      <div class="col-md-5">
        <h2>{{title}}</h2>
        <p class="created">Topic created by {{user.name}} on {{format_date date_created}}</p>
      </div>
      <div class="col-md-7">
        <p>{{content}}</p>
      </div>
    </div>
</div>
<br>

{{#if logged_in}}
<form class="form new-comment-form">
    <textarea class="form-input" id="comment" name="comment" placeholder="Add a comment"></textarea>
    <button type="submit" class="btn btn-primary">Post Comment</button>
</form>
<br>
{{/if}}

{{#each comments as |comment|}}
<div class = "comment">
  <div class="row mb-4">
    <div class="col-md-5">
      <p>{{comment.comment}}</p>
      <p class="created">Comment posted by {{user.name}} on {{format_date comment.date_created}}</p>
    </div>
  </div>
</div>
<br>
{{/each}}

<script src="../js/topic.js"></script>