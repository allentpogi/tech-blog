<!-- Loop over each object in the topics array -->

{{#each topics as |topic| }}
<div class="row mb-4 topic">
  <div class="col-md-5">
    <h2>
      <a href="/topic/{{topic.id}}">{{topic.title}}</a>
    </h2>
    <p>Created by {{topic.user.name}} on {{format_date topic.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{topic.content}}
    </p>
  </div>
</div>
{{/each}}